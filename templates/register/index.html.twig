{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block content %}
<body class="first_reg">
<div class="container">
    {{ form_start(form) }}
        <div class="row justify-content-center">
            <div class="col-md-8 col-xl-6 my-3 mask-custom rounded-5 shadow-5-strong py-3 mb-5" id="page_register">
                <h2 class="title_register">Inscrivez-vous!</h2>
                    <div class="col-md-10">{{ form_row(form.lastname) }}</div>
                    <div class="col-md-10">{{ form_row(form.firstname) }}</div>
                    <div class="col-md-10">{{ form_row(form.number) }}</div>
                    <div class="col-md-10">{{ form_row(form.address) }}</div>
                    <div class="col-md-10">{{ form_row(form.zip) }}</div>
                    <div class="col-md-10">{{ form_row(form.city) }}</div>
                    <div class="col-md-10">{{ form_row(form.email) }}</div>
                    <div class="col-md-10">{{ form_row(form.password) }}</div>
                    <div class="col-md-10">{{ form_row(form.agreeTerms) }}</div>
    {{ form_end(form) }}
            </div>
        </div>
    {# {% if notification %}
        <div class="alert alert-info">{{ notification }}</div>
    {% endif %} #}

</div>
</body>
{% endblock %}
